<p id="notice"><%= notice %></p>
<% breadcrumb :Schedule %>
<h1>Schedules</h1>
<table class="table table-sm table-striped">
  <thead>
    <tr>
      <th scope="co1">Name</th>
      <th scope="co1">Start time</th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.name %></td>
        <td><%= schedule.start_time %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= month_calendar events: @schedules do |date, schedules| %>
  <%= date %>

  <% schedules.each do |schedule| %>
    <div>
      <%= schedule.name %>
    </div>
  <% end %>
<% end %>

<%= link_to 'New Schedule', new_schedule_path, class: "btn btn-sm btn-outline-secondary" %>
